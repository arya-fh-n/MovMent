<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_transaction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    tools:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_item_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_movie"
            app:layout_constraintBottom_toTopOf="@id/separator_transaction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_item_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Transaction : TR-20240101120000" />

        <TextView
            android:id="@+id/tv_item_transaction_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/separator_transaction"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_item_icon"
            tools:text="22 June 2023" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/separator_transaction"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/iv_item_icon" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_movie_banner"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator_transaction"
            tools:src="@drawable/product_thumbnail" />

        <TextView
            android:id="@+id/tv_item_first_movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_bold"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_movie_banner"
            app:layout_constraintTop_toTopOf="@id/iv_movie_banner"
            tools:text="The Lord of The Rings: The Two.." />

        <TextView
            android:id="@+id/tv_item_total_movies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@id/tv_item_first_movie_title"
            app:layout_constraintStart_toStartOf="@id/tv_item_first_movie_title"
            app:layout_constraintTop_toBottomOf="@id/tv_item_first_movie_title"
            tools:text="2 movies" />

        <TextView
            android:id="@+id/tv_item_total_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@id/iv_movie_banner"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_total_movies"
            tools:text="Total" />

        <TextView
            android:id="@+id/tv_item_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_item_total_title"
            app:layout_constraintTop_toBottomOf="@id/tv_item_total_title"
            tools:text="10 TOKEN" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
