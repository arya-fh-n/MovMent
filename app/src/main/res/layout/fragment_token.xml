<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.ui.dashboard.token.TokenFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_token"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_token"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_navigate_back"
            app:titleCentered="true"
            app:titleTextAppearance="@style/Toolbar.Title"
            tools:title="MovMent" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/separator_topbar"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/grey_line"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar_token" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator_topbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator_topbar">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_balance"
                android:layout_width="320dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="?colorTertiary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_balance_is"
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:textColor="?colorOnTertiary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Balance" />

                    <ImageView
                        android:id="@+id/iv_balance"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tv_balance_is"
                        app:layout_constraintTop_toBottomOf="@id/tv_balance_is"
                        tools:src="@drawable/ic_balance"
                        tools:tint="?colorOnTertiary" />

                    <TextView
                        android:id="@+id/tv_balance"
                        style="@style/TextAppearance.Material3.TitleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:textColor="?colorOnTertiary"
                        app:layout_constraintBottom_toBottomOf="@id/iv_balance"
                        app:layout_constraintStart_toEndOf="@id/iv_balance"
                        app:layout_constraintTop_toTopOf="@id/iv_balance"
                        tools:text="10 TOKEN" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_topup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="@id/cardview_balance"
                app:layout_constraintStart_toStartOf="@id/cardview_balance"
                app:layout_constraintTop_toBottomOf="@id/cardview_balance">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_token_topup_title"
                        style="@style/TextAppearance.Material3.HeadlineSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Top up Token" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_topup_amount"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="32dp"
                        android:layout_marginTop="16dp"
                        app:errorTextColor="@color/red_error"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_token_topup_title"
                        tools:hint="Token">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_topup_amount"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_topup_amount_selection"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/ti_topup_amount"
                        app:layout_constraintStart_toStartOf="@id/ti_topup_amount"
                        app:layout_constraintTop_toBottomOf="@id/ti_topup_amount"
                        tools:itemCount="6"
                        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        tools:listitem="@layout/item_token_topup"
                        tools:spanCount="2" />

                    <com.arfdevs.myproject.movment.presentation.view.component.ErrorView
                        android:id="@+id/error_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_continue"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="80dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="@id/cardview_topup"
                app:layout_constraintStart_toStartOf="@id/cardview_topup"
                app:layout_constraintTop_toBottomOf="@id/cardview_topup"
                tools:text="Continue" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>