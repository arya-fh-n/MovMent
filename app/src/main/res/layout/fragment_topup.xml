<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.ui.fulfillment.TopupFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_topup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_topup"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_navigate_back"
            app:titleCentered="true"
            app:titleTextAppearance="@style/Toolbar.Title"
            tools:title="MovMent" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/separator_topbar"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/grey_line"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar_topup" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_topup_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="48dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator_topbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp">

            <TextView
                android:id="@+id/tv_topup_payment_title"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/tv_topup_payment_title" />

            <TextView
                android:id="@+id/tv_amount_title"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_topup_payment_title"
                app:layout_constraintTop_toBottomOf="@id/tv_topup_payment_title"
                tools:text="@string/tv_amount_title" />

            <TextView
                android:id="@+id/tv_amount"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_amount_title"
                app:layout_constraintStart_toEndOf="@+id/tv_topup_payment_title"
                app:layout_constraintTop_toTopOf="@id/tv_amount_title"
                tools:text="@string/tv_amount_ph" />

            <TextView
                android:id="@+id/tv_price_title"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="@+id/tv_amount_title"
                app:layout_constraintTop_toBottomOf="@id/tv_amount_title"
                tools:text="@string/tv_price_title" />

            <TextView
                android:id="@+id/tv_price"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_price_title"
                app:layout_constraintStart_toEndOf="@+id/tv_topup_payment_title"
                app:layout_constraintTop_toTopOf="@id/tv_price_title"
                tools:text="@string/tv_price_ph" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_topup_payment_method"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_price_title">

                <LinearLayout
                    android:id="@+id/ll_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/iv_payment_logo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:importantForAccessibility="no"
                        tools:src="@drawable/ic_payment_method" />

                    <TextView
                        android:id="@+id/tv_payment_method_title"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/tv_price_title"
                        app:layout_constraintStart_toEndOf="@+id/tv_topup_payment_title"
                        app:layout_constraintTop_toTopOf="@id/tv_price_title"
                        tools:text="@string/tv_payment_method_title" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pay"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="80dp"
                android:layout_marginVertical="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardview_topup_payment_method"
                tools:text="@string/btn_pay" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>